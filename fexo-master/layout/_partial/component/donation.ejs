<% if (theme.donation.show) { %>
  <div class="text-center donation">
    <div class="inner-donation">
      <span id="btn-donation" class="btn-donation" onclick="playBody()"><%= theme.donation.btn_text %></span>
      <div id="donation-body" class="donation-body">
        <div class="tip text-center"><%= theme.donation.tip %></div>
        <ul>
        <% theme.donation.items.forEach(function(item, i){ %>
          <li class="item">
            <% if(item.text!=undefined){ %>
              <div><%= item.text %></div>
            <% } %>
            <img src="<%= item.imgUrl %>" alt="">
          </li>
        <% }) %>
        </ul>
      </div>
    </div>
  </div>
<% } %>
